Bootstrap: docker
From: ubuntu:latest

%runscript
     cp /data/fortran/install/execname /fortran
     cd /fortran
     ./execname

%post
     apt-get update
     export TZ=Asia/Kolkata
     ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
     apt-get -y install git make python3 wget build-essential cmake curl
     git clone https://github.com/spack/spack.git --depth=1 /opt/spack
     . /opt/spack/share/spack/setup-env.sh
     spack compiler add
     spack install cuda
     spack clean -a
     spack install nvhpc
     spack clean -a
     spack load nvhpc
     spack compiler add
     spack install hdf5 +cxx +fortran +hl -mpi %nvhpc
     spack clean -a
     mkdir /data
     cd /data
     git clone https://github.com/Nischay-Pro/mfcfd.git --branch=hdf5-sec-order --depth=1 fortran
     spack unload
     spack load cuda
     spack load nvhpc
     spack load hdf5
     cd fortran/install
     python3 install.py --mfcfd cuda
     mkdir /fortran